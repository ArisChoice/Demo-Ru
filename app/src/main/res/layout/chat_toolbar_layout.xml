<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/toolbar_shadow_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_10"
            android:src="@drawable/back_arrow"
            android:tint="@color/line_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.app.rum_a.utils.views.RumTextView
                android:id="@+id/txt_title_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/back_toolbar"
                android:layout_toLeftOf="@+id/imageView3"
                android:layout_toRightOf="@+id/back_toolbar"
                android:layout_toStartOf="@+id/imageView3"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/margin_2"
                android:text="@string/str_chat"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/txt_18" />

            <com.app.rum_a.utils.views.RumTextView
                android:id="@+id/chat_property_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/margin_1"
                android:singleLine="true"
                android:text="Property name"
                android:textSize="@dimen/txt_11" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgVideoCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imgAudioCall"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_10"
            android:src="@drawable/video"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imgAudioCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_10"
            android:src="@drawable/audio"
            android:visibility="visible" />
    </LinearLayout>


</android.support.v7.widget.Toolbar>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_20"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_10"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/location" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/location_icon"
        android:layout_marginLeft="@dimen/margin_10"
        android:orientation="vertical">

        <com.app.rum_a.utils.views.RumTextView
            android:id="@+id/user_address_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_5"
            android:singleLine="true"
            android:text="Location 13 miles away"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/txt_15"
            android:visibility="gone" />

        <com.app.rum_a.utils.views.RumTextView
            android:id="@+id/user_address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_5"
            android:paddingRight="@dimen/margin_5"
            android:text="Los Angeles, california USA"
            android:textColor="@color/color_black"
            android:textSize="@dimen/txt_13" />
    </LinearLayout>
</LinearLayout>
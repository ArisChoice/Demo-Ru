<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">


        <com.skyfishjy.library.RippleBackground
            android:id="@+id/ripple_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rb_color="@color/colorAccent"
            app:rb_duration="3000"
            app:rb_radius="55dp"
            app:rb_rippleAmount="3"
            app:rb_scale="5">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPropertyImage"
                android:layout_width="@dimen/margin_110"
                android:layout_height="@dimen/margin_110"
                android:layout_centerInParent="true"
                android:padding="@dimen/margin_2"
                android:src="@drawable/proprtyy_sampl"
                app:border_color="@color/rippelColor"
                app:border_width="@dimen/margin_3" />

            <com.app.rum_a.utils.views.RumTextView
                android:id="@+id/txtFindingNearBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/imgUserImage"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="@dimen/margin_50"
                android:text="@string/finding_property"
                android:textSize="@dimen/txt_15" />
        </com.skyfishjy.library.RippleBackground>
    </RelativeLayout>
</LinearLayout>
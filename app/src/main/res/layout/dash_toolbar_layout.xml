<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- <android.support.design.widget.AppBarLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:theme="@style/AppTheme">-->

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60"
        android:background="@drawable/toolbar_shadow_bg"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/toolbar_icon_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:padding="@dimen/margin_5"
                android:src="@drawable/menu_icon"
                android:visibility="gone" />

            <com.app.rum_a.utils.views.RumTextView
                android:id="@+id/title_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar_logo"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/txt_18"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/toolbar_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/logo_home"
                android:visibility="visible" />

        </LinearLayout>

        <ImageView
            android:id="@+id/toolbar_icon_chat"
            android:layout_width="@dimen/margin_40"
            android:layout_height="@dimen/margin_40"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/margin_5"
            android:background="@drawable/selecto_default_click"
            android:padding="@dimen/margin_5"
            android:src="@drawable/like_icon_new"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/toolbar_icon_add_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/margin_5"
            android:padding="@dimen/margin_5"
            android:src="@drawable/plus"
            android:visibility="gone" />
    </android.support.v7.widget.Toolbar>

    <!--   </android.support.design.widget.AppBarLayout>-->
</LinearLayout>